#!/usr/bin/env bash
set -e

function printStatus {
    if [ $? -eq 0 ]; then
        echo -e "\nPOP POP POP POP POP POP POP"
    else
        echo -e "\nMAN DOWN"
    fi
}

trap printStatus EXIT

. $(dirname $0)/goenv
ROOT_DIR=$(cd $(dirname $(dirname $0)) && pwd)
CLI_ACCEPTANCE_GOPATH=$ROOT_DIR/tmp/cli_acceptance_gopath
mkdir -p $CLI_ACCEPTANCE_GOPATH/src/github.com/cloudfoundry
ln -s $ROOT_DIR $CLI_ACCEPTANCE_GOPATH/src/github.com/cloudfoundry/cli-acceptance-tests

go install -v github.com/onsi/ginkgo/ginkgo

rm -f bin/gcf

if [[ $1 == '-s' ]]
then
  echo "Using $(which cf) as cf"
  ln -s $(which cf) bin/cf
else
  curl -L http://go-cli.s3.amazonaws.com/master/cf-linux-amd64.tgz > bin/cf.tgz
  tar -xvzf bin/cf.tgz
  rm bin/cf.tgz
  chmod +x bin/cf
fi

export local_bin=$(cd $(dirname $0) && pwd)
PATH=$PATH:$local_bin GOPATH=$(godep path):$CLI_ACCEPTANCE_GOPATH:$GOPATH ginkgo -r -slowSpecThreshold=120 ./gats
rm -rf $CLI_ACCEPTANCE_GOPATH
