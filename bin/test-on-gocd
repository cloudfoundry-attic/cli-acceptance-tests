#!/usr/bin/env bash
set -e

function printStatus {
    if [ $? -eq 0 ]; then
        echo -e "\nPOP POP POP POP POP POP POP"
    else
        echo -e "\nMAN DOWN"
    fi
}

trap printStatus EXIT

. $(dirname $0)/goenv
ROOT_DIR=$(cd $(dirname $(dirname $0)) && pwd)
GATS_GOPATH=$ROOT_DIR/tmp/gats_gopath
mkdir -p $GATS_GOPATH/src/github.com/pivotal-cf-experimental
ln -s $ROOT_DIR $GATS_GOPATH/src/github.com/pivotal-cf-experimental/GATS

go install -v github.com/onsi/ginkgo/ginkgo
go get -u github.com/tools/godep

if [[ $1 == '-s' ]]
then
  echo "Using $(which cf) as cf"
  ln -s $(which cf) bin/cf
else
  chmod +x bin/cf-linux-amd64
  ln -s bin/cf-linux-amd64 bin/cf
fi

echo `which cf`
echo `which godep`

export local_bin=$(cd $(dirname $0) && pwd)
PATH=$local_bin:$PATH GOPATH=$ROOT_DIR/Godeps/_workspace:$GATS_GOPATH:$GOPATH ginkgo -r -slowSpecThreshold=120 ./gats
rm -rf $GATS_GOPATH
