#!/usr/bin/env bash
set -e

function printStatus {
    if [ $? -eq 0 ]; then
        echo -e "\nPOP POP POP POP POP POP POP"
    else
        echo -e "\nMAN DOWN"
    fi
}

trap printStatus EXIT

. $(dirname $0)/goenv
ROOT_DIR=$(cd $(dirname $(dirname $0)) && pwd)
TESTS_GOPATH=$ROOT_DIR/tmp/tests_gopath
mkdir -p $TESTS_GOPATH/src/github.com/cloudfoundry
ln -s $ROOT_DIR $TESTS_GOPATH/src/github.com/cloudfoundry/cli-acceptance-tests

go install -v github.com/onsi/ginkgo/ginkgo
go get -u github.com/tools/godep

rm -f bin/cf

if [[ $1 == '-s' ]]
then
  echo "Using $(which cf) as cf"
  ln -s $(which cf) bin/cf
else
  mv cf-linux-amd64 bin/cf
  chmod u+x bin/cf
fi

export local_bin=$(cd $(dirname $0) && pwd)
export PATH=$local_bin:$PATH

echo `ls -l $TESTS_GOPATH/src/github.com/cloudfoundry/cli-acceptance-tests/bin`
echo $local_bin
echo `ls -l $local_bin`

echo $PATH
echo `which cf`
echo `which godep`

GOPATH=$ROOT_DIR/Godeps/_workspace:$TESTS_GOPATH:$GOPATH ginkgo -r -slowSpecThreshold=120 ./cli_tests
rm -rf $TESTS_GOPATH
